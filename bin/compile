#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing WoyoWoyo"

# change to the the BUILD_DIR ($1)
cd $1

# download the mruby binary (-O) silently (-s)
curl https://bitbucket.org/emaknyus/cbir_heroku/raw/856a4d13e66afd9f3049befc40df240a7a655a01/cbir/cbir.tar.gz -s -O

# make a directory to untar (like unzip) the binary
mkdir -p vendor/cbir

# untar the binary to the directory we want
tar -C vendor/cbir -xvf cbir.tar.gz
